type User {
  id: ID! @id
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  country: String
  phoneNumber: String
  headline: String
  skills:[String!]
  about: String
  active: Boolean! @default(value: false)
  posts:[Post!]! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Post {
  id: ID! @id
  title: String!
  category: String!
  location: String!
  offer: Int!
  currency: String!
  description: String!
  skillsRequired: [String!]!
  author: User! 
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type EmailVerificationHash {
  id: ID! @id
  hash: String! @unique
}